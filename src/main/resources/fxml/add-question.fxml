<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hawks.twistedPacman.View.AddCtrl">
   <children>
      <Button fx:id="backBtn" layoutX="8.0" layoutY="8.0" mnemonicParsing="false" onAction="#backClicked" style="-fx-background-color: black;" text="Back" textFill="#fffd00">
         <font>
            <Font name="Eras Bold ITC" size="20.0" />
         </font>
      </Button>
      <Label layoutX="204.0" layoutY="38.0" text="Add a Question" textFill="#fffd00">
         <font>
            <Font name="Eras Bold ITC" size="24.0" />
         </font>
      </Label>
      <VBox layoutX="46.0" layoutY="87.0" prefHeight="285.0" prefWidth="510.0">
         <children>
            <Label prefHeight="31.0" prefWidth="109.0" text="Difficulty:" textFill="#fffd00">
               <font>
                  <Font name="Consolas" size="18.0" />
               </font>
            </Label>
            <Pane prefHeight="34.0" prefWidth="510.0">
               <children>
                  <RadioButton fx:id="easyRadio" mnemonicParsing="false" text="Easy" textFill="WHITE">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="mediumRadio" layoutX="173.0" mnemonicParsing="false" text="Medium" textFill="#fff000">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="hardRadio" layoutX="346.0" mnemonicParsing="false" text="Hard" textFill="RED">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                  </RadioButton>
               </children>
            </Pane>
            <TextArea fx:id="questionText" prefHeight="61.0" prefWidth="492.0" promptText="Insert the question.." />
            <Pane prefHeight="36.0" prefWidth="510.0">
               <children>
                  <TextField fx:id="firstAnswer" layoutX="32.0" layoutY="2.0" prefHeight="25.0" prefWidth="479.0" promptText="Insert answer" />
                  <RadioButton fx:id="firstRadio" layoutX="8.0" layoutY="5.0" mnemonicParsing="false" />
               </children>
            </Pane>
            <Pane prefHeight="37.0" prefWidth="510.0">
               <children>
                  <TextField fx:id="secondAnswer" layoutX="32.0" layoutY="1.0" prefHeight="25.0" prefWidth="479.0" promptText="Insert answer" />
                  <RadioButton fx:id="secondRadio" layoutX="8.0" layoutY="4.0" mnemonicParsing="false" />
               </children>
            </Pane>
            <Pane prefHeight="35.0" prefWidth="510.0">
               <children>
                  <TextField fx:id="thirdAnswer" layoutX="32.0" layoutY="-2.0" prefHeight="25.0" prefWidth="479.0" promptText="Insert answer" />
                  <RadioButton fx:id="thirdRadio" layoutX="8.0" layoutY="1.0" mnemonicParsing="false" />
               </children>
            </Pane>
            <Pane prefHeight="27.0" prefWidth="510.0">
               <children>
                  <TextField fx:id="fourthAnswer" layoutX="32.0" layoutY="-3.0" prefHeight="25.0" prefWidth="479.0" promptText="Insert answer" />
                  <RadioButton fx:id="fourthRadio" layoutX="8.0" mnemonicParsing="false" />
               </children>
            </Pane>
            <Pane prefHeight="79.0" prefWidth="510.0">
               <children>
                  <Button fx:id="addBtn" layoutX="160.0" layoutY="25.0" mnemonicParsing="false" onAction="#addClicked" prefHeight="25.0" prefWidth="191.0" style="-fx-background-color: fffd00;" text="Add">
                     <font>
                        <Font name="Consolas" size="18.0" />
                     </font>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</AnchorPane>
